{% extends 'base.jinja2' %}

{% block subtitle %}Add a Donation{% endblock subtitle %}

{% block content %}
    <form method="POST">
        {% if error %}<p>{{ error }}</p>{% endif %}
        <label for="donor">Donor: </label><br>
        <input type="text" name="donor" id="donor" required><br>
        <label for="amount">Amount: </label><br>
        <input type="number" name="amount" id="amount"><br>
        <input type="submit" value="Add Donor"><br>
    </form>
{% endblock content %}