{% extends 'base.jinja2' %}

{% block subtitle %}Add a Donation{% endblock subtitle %}

{% block content %}
    <form method="POST">
        <label for="donor"Donor: </label>
        <input type="text" name="donor" id="donor" required>
        <label for="amount"Amount: </label>
        <input type="number" name="amount" id="amount">
        <input type="submit" value="Add Donor">
    </form>
{% endblock content %}